---
import { getCollection } from "astro:content";
import BlogCard from "@/components/astro/Card/BlogCard.astro";
import ClickableCard from "@/components/astro/Card/ClickableCard.astro";
import BlogFeaturedCard from "@/components/astro/Card/BlogFeaturedCard.astro";
import PageLayout from "@/layouts/PageLayout.astro";
import { Image } from "astro:assets";
import Badge from "@/components/astro/Badge.astro";
import type { GetStaticPaths, Page } from "astro";
import { PAGE_SIZE } from "@/consts";
import Pagination from "@/components/astro/Pagination.astro";
import type { CollectionEntry } from "astro:content";
import MoodEmpty from "@tabler/icons/outline/mood-empty.svg";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allPublishedPosts = (
    await getCollection("posts", ({ data }) => {
      return (
        (import.meta.env.MODE !== "production" || data.draft === false) &&
        data.type === "blog"
      );
    })
  ).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

  const featuredPosts = allPublishedPosts.filter(({ data }) => data.featured);
  const nonFeaturedPosts = allPublishedPosts.filter(
    ({ data }) => !data.featured
  );

  return paginate(nonFeaturedPosts, {
    pageSize: PAGE_SIZE,
    props: { featuredPosts },
  });
};
interface Props {
  page: Page<CollectionEntry<"posts">>;
  featuredPosts: CollectionEntry<"posts">[];
}
const { page, featuredPosts } = Astro.props;
const pageTitle = "Our latest blog posts";
const pageDescription =
  "Read the latest articles and insights from our community.";
---

<PageLayout title={pageTitle} description={pageDescription}>
  <header class="flex flex-col items-center justify-center py-16 md:py-24">
    <div class="anim-header-badge opacity-0 scale-50">
      <Badge
        variant={"secondary"}
        size={"sm"}
        class="font-mono uppercase tracking-widest text-xs mb-3 border border-border/50"
      >
        Blog & Articles
      </Badge>
    </div>
    <h1
      class="anim-header-title invisible font-sans text-5xl md:text-7xl font-medium tracking-tighter pt-4 text-center max-w-4xl leading-tight"
    >
      Read our latest articles
    </h1>
  </header>

  {
    featuredPosts.length > 0 && page.currentPage === 1 && (
      <section class="mb-12">
        <h2 class="anim-section-title font-sans text-xl md:text-2xl font-medium mb-6 uppercase tracking-wider border-b border-border/50 pb-2 opacity-0 translate-y-4">
          Featured Posts
        </h2>
        <div class="grid gap-8 lg:gap-10 xl:gap-18">
          {featuredPosts.map((post) => (
            <ClickableCard href={`/${post.id}/`}>
              <BlogFeaturedCard {...post} />
            </ClickableCard>
          ))}
        </div>
      </section>
    )
  }

  <section class="mb-12">
    <h2
      class="anim-section-title font-sans text-xl md:text-2xl font-medium mb-8 uppercase tracking-wider border-b border-border/50 pb-2 opacity-0 translate-y-4"
    >
      All Posts
    </h2>
    {
      page.data.length > 0 ? (
        <>
          <div class="grid grid-cols-2 gap-8">
            {page.data.map((post) => (
              <ClickableCard
                class="group relative col-span-2 lg:col-span-1 border-b border-border last:border-b-0 lg:[&:nth-last-child(2)]:border-b-0 hover:bg-secondary/20 transition-colors"
                href={`/${post.id}/`}
              >
                <BlogCard {...post} />
                {post.data.heroImage && (
                  <Image
                    inferSize
                    class={
                      "absolute top-0 right-0 h-full w-1/4 object-cover z-0 hidden group-hover:block opacity-40 grayscale group-hover:grayscale-0 transition-all duration-500"
                    }
                    src={post.data.heroImage}
                    alt={post.data.heroImageAlt ?? ""}
                  />
                )}
              </ClickableCard>
            ))}
          </div>
          <div class="anim-pagination flex justify-center mt-16 opacity-0">
            <Pagination
              url={page.url}
              class="font-mono text-sm uppercase tracking-widest"
            />
          </div>
        </>
      ) : (
        <div class="anim-empty-state flex flex-col items-center justify-center py-8 text-center border border-dashed border-border/60 rounded-xl bg-secondary/5 opacity-0 scale-95">
          <div class="p-4 bg-secondary rounded-full mb-4">
            <MoodEmpty class="size-8 text-muted-foreground" />
          </div>
          <h3 class="font-sans text-xl font-medium mb-2">No posts found</h3>
          <p class="text-muted-foreground max-w-xs mx-auto">
            We haven't published any regular articles yet. Check back soon or
            explore our featured stories above.
          </p>
        </div>
      )
    }
  </section>
</PageLayout>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";

  if (typeof window !== "undefined") {
    gsap.registerPlugin(ScrollTrigger, SplitText);

    const headerTl = gsap.timeline({
      defaults: { ease: "power3.out" },
    });

    const titleSplit = SplitText.create(".anim-header-title", {
      type: "lines, words",
      linesClass: "overflow-hidden",
    });

    headerTl
      .to(".anim-header-badge", {
        scale: 1,
        opacity: 1,
        duration: 0.8,
        ease: "back.out(1.7)",
      })
      .set(".anim-header-title", { autoAlpha: 1 }, "-=0.4")
      .from(
        titleSplit.words,
        {
          yPercent: 100,
          opacity: 0,
          duration: 1,
          stagger: 0.05,
          ease: "power4.out",
        },
        "<"
      );

    gsap.utils.toArray(".anim-section-title").forEach((title: any) => {
      gsap.to(title, {
        y: 0,
        opacity: 1,
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: {
          trigger: title,
          start: "top 90%",
        },
      });
    });

    if (document.querySelector(".anim-pagination")) {
      gsap.to(".anim-pagination", {
        opacity: 1,
        duration: 1,
        scrollTrigger: {
          trigger: ".anim-pagination",
          start: "top 95%",
        },
      });
    }

    if (document.querySelector(".anim-empty-state")) {
      gsap.to(".anim-empty-state", {
        scale: 1,
        opacity: 1,
        duration: 0.8,
        ease: "back.out(1.5)",
        delay: 0.5,
      });
    }
  }
</script>
