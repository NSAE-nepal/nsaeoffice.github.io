---
import Badge from "@/components/astro/Badge.astro";
import MoodEmpty from "@tabler/icons/outline/mood-empty.svg";
import PageLayout from "@/layouts/PageLayout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import ClickableCard from "@/components/astro/Card/ClickableCard.astro";
import type { GetStaticPaths, Page } from "astro";
import { PAGE_SIZE } from "@/consts";
import Pagination from "@/components/astro/Pagination.astro";
import MinutesCard from "@/components/astro/Card/MinutesCard.astro";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allPublishedMinutes = (
    await getCollection("minutes", ({ data }) => {
      return import.meta.env.MODE !== "production" || data.draft === false;
    })
  ).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

  return paginate(allPublishedMinutes, {
    pageSize: PAGE_SIZE,
  });
};

interface Props {
  page: Page<CollectionEntry<"minutes">>;
}

const { page } = Astro.props;

const pageTitle = "Official Meeting Records";
const pageDescription =
  "Browse the minutes from our General, Executive, and Committee meetings.";
---

<PageLayout title={pageTitle} description={pageDescription}>
  <main class="py-16 md:py-24 space-y-12">
    <header class="flex flex-col items-center justify-center gap-4 text-center">
      <div class="anim-header-badge opacity-0 scale-50">
        <Badge
          variant={"secondary"}
          size={"sm"}
          class="font-mono uppercase tracking-widest text-xs mb-3 border border-border/50"
        >
          Transparency
        </Badge>
      </div>
      <h1
        class="anim-header-title invisible font-sans text-5xl md:text-7xl font-medium tracking-tighter leading-tight max-w-4xl text-balance"
      >
        Official Meeting Records
      </h1>
      <p
        class="anim-header-desc font-sans text-lg text-muted-foreground max-w-2xl text-balance pt-2 opacity-0 translate-y-4"
      >
        Browse the minutes from our General, Executive, and Committee meetings.
      </p>
    </header>

    <section>
      {
        page.data.length > 0 ? (
          <>
            <div class="space-y-4">
              {page.data.map((minute) => (
                <ClickableCard
                  class="group relative block w-full rounded-xl  bg-secondary p-6 text-secondary-foreground shadow-sm"
                  href={`/minutes/${minute.id}/`}
                >
                  <MinutesCard {...minute} />
                </ClickableCard>
              ))}
            </div>
            <div class="anim-pagination flex justify-center mt-16 opacity-0">
              <Pagination
                url={page.url}
                class="font-mono text-sm uppercase tracking-widest"
              />
            </div>
          </>
        ) : (
          <div class="anim-empty-state flex flex-col items-center justify-center py-8 text-center border border-dashed border-border/60 rounded-xl bg-secondary/5 opacity-0 scale-95">
            <div class="p-4 bg-secondary rounded-full mb-4">
              <MoodEmpty class="size-8 text-muted-foreground" />
            </div>
            <h3 class="font-sans text-xl font-medium mb-2">
              No minutes available
            </h3>
            <p class="text-muted-foreground max-w-xs mx-auto">
              There are no minutes available at the moment. Check back later for
              updates.
            </p>
          </div>
        )
      }
    </section>
  </main>
</PageLayout>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";

  if (typeof window !== "undefined") {
    gsap.registerPlugin(ScrollTrigger, SplitText);

    const headerTitleEl = document.querySelector(".anim-header-title");
    const headerDescEl = document.querySelector(".anim-header-desc");
    const sectionTitleEl = document.querySelector(".anim-section-title");

    const headerTl = gsap.timeline({
      defaults: { ease: "power3.out" },
    });

    headerTl.to(".anim-header-badge", {
      scale: 1,
      opacity: 1,
      duration: 0.8,
      ease: "back.out(1.7)",
    });

    if (headerTitleEl) {
      const titleSplit = SplitText.create(headerTitleEl, {
        type: "lines, words",
        linesClass: "overflow-hidden",
      });

      headerTl.set(headerTitleEl, { autoAlpha: 1 }, "-=0.4").from(
        titleSplit.words,
        {
          yPercent: 100,
          opacity: 0,
          duration: 1,
          stagger: 0.05,
          ease: "power4.out",
        },
        "<",
      );
    }

    if (headerDescEl) {
      headerTl.to(
        headerDescEl,
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
        },
        "-=0.5",
      );
    }

    if (sectionTitleEl) {
      headerTl.to(
        sectionTitleEl,
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
        },
        "-=0.5",
      );
    }

    const paginationEl = document.querySelector(".anim-pagination");
    if (paginationEl) {
      gsap.to(paginationEl, {
        opacity: 1,
        duration: 1,
        scrollTrigger: {
          trigger: paginationEl,
          start: "top 95%",
        },
      });
    }

    const emptyStateEl = document.querySelector(".anim-empty-state");
    if (emptyStateEl) {
      gsap.to(emptyStateEl, {
        scale: 1,
        opacity: 1,
        duration: 0.8,
        ease: "back.out(1.5)",
        delay: 0.5,
      });
    }
  }
</script>
