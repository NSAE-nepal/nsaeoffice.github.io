---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import ClickableCard from "@/components/astro/Card/ClickableCard.astro";
import PageLayout from "@/layouts/PageLayout.astro";
import Badge from "@/components/astro/Badge.astro";
import type { GetStaticPaths, Page } from "astro";
import { PAGE_SIZE } from "@/consts";
import Pagination from "@/components/astro/Pagination.astro";
import CareersCard from "@/components/astro/Card/CareersCard.astro";
import Empty from "@/components/astro/Empty.astro";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allVacancies = (
    await getCollection("careers", ({ data }) => {
      // In production, filter out drafts.
      return import.meta.env.MODE !== "production" || data.draft === false;
    })
  ).sort((a, b) => b.data.postedDate.valueOf() - a.data.postedDate.valueOf());

  return paginate(allVacancies, {
    pageSize: PAGE_SIZE,
  });
};

interface Props {
  page: Page<CollectionEntry<"careers">>;
}

const { page } = Astro.props;
const pageTitle = "Our latest careers";
const pageDescription = "Your Next Chapter Starts Here";
---

<PageLayout title={pageTitle} description={pageDescription}>
  <section
    class="min-h-40 flex flex-col items-center justify-center gap-4 py-16 md:py-24 px-6"
  >
    <Badge
      variant={"secondary"}
      size={"sm"}
      class="font-mono uppercase tracking-widest text-xs mb-3 border border-border/50"
    >
      Careers
    </Badge>
    <h1
      class="font-sans text-5xl md:text-7xl font-medium text-center tracking-tighter leading-tight max-w-4xl"
    >
      Your Next Chapter Starts Here
    </h1>
  </section>
  {
    page.data.length > 0 ? (
      <section class="space-y-6 mb-24">
        <h1 class="font-sans text-xl md:text-2xl font-medium mb-6 uppercase tracking-wider border-b border-border/50 pb-2">
          Open Positions
        </h1>
        <div class="space-y-4">
          {page.data.map((vacancy) => (
            <ClickableCard
              class="group relative block w-full rounded-xl  bg-secondary p-6 text-secondary-foreground shadow-sm"
              href={`/careers/${vacancy.id}/`}
            >
              <CareersCard {...vacancy} />
            </ClickableCard>
          ))}
        </div>
        <div class="flex justify-center mt-16">
          <Pagination
            url={page.url}
            class="font-mono text-sm uppercase tracking-widest"
          />
        </div>
      </section>
    ) : (
      <Empty
        title="No open positions"
        description="We don't have any vacancies right now. Please check back later for new opportunities."
      />
    )
  }
</PageLayout>
