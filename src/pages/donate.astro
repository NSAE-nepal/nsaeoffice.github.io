---
import PageLayout from "@/layouts/PageLayout.astro";
import Badge from "@/components/astro/Badge.astro";
import Button from "@/components/astro/Button/Button.astro";
import { Image } from "astro:assets";
import { getEntry } from "astro:content";

import Heart from "@tabler/icons/outline/heart.svg";
import School from "@tabler/icons/outline/school.svg";
import Microscope from "@tabler/icons/outline/microscope.svg";
import Users from "@tabler/icons/outline/users.svg";
import Copy from "@tabler/icons/outline/copy.svg";
import BuildingBank from "@tabler/icons/outline/building-bank.svg";

const donatePage = await getEntry("donate", "main");

if (!donatePage) {
  throw new Error("Donate page data not found in src/content/donate.json");
}

const { data } = donatePage;

const iconMap: Record<string, any> = {
  School: School,
  Microscope: Microscope,
  Users: Users,
};
---

<PageLayout
  title="Donate - NSAE"
  description="Support the mission of the Nepal Society of Agricultural Engineers."
>
  <section
    class="donate-hero-section relative rounded-2xl flex min-h-[60vh] md:min-h-[70vh] items-center overflow-hidden px-6 py-20 md:px-12 md:py-32 text-white"
  >
    <div
      class="anim-hero-vertical-text absolute top-32 left-6 md:left-12 z-20 hidden md:block opacity-0"
    >
      <span
        class="font-mono text-xs text-white/60 tracking-widest uppercase vertical-lr"
      >
        [ SUPPORT US ]
      </span>
    </div>

    <div class="relative z-20 flex max-w-4xl flex-col gap-6 md:gap-8 mt-12">
      <div class="anim-hero-badge opacity-0 translate-y-4">
        <Badge
          variant="outline"
          class="w-fit font-mono text-xs uppercase tracking-widest border-white/30 text-white"
        >
          Make an Impact
        </Badge>
      </div>

      <h1
        class="font-sans text-5xl md:text-7xl lg:text-8xl font-medium leading-[0.9] tracking-tighter"
      >
        <span class="anim-split-text inline-block">Empower the</span>
        <br />
        <span class="anim-split-text inline-block text-white/80"
          >Engineers of Tomorrow</span
        >
      </h1>

      <p
        class="anim-hero-desc font-sans text-lg md:text-xl text-white/90 max-w-2xl leading-relaxed opacity-0 translate-y-4"
      >
        Your contribution helps us advance agricultural engineering in Nepal
        through scholarships, research, and community development.
      </p>
    </div>

    <div class="absolute inset-0 z-10">
      <div
        class="absolute inset-0 z-20 bg-gradient-to-r from-black/90 via-black/60 to-black/20"
      >
      </div>
      <div class="absolute inset-0 z-10 bg-black/20"></div>
      <img
        class="anim-hero-image absolute inset-0 h-full w-full object-cover scale-110"
        alt="Giving back to the community"
        src={data.heroImage}
      />
    </div>
  </section>

  <div class="space-y-24 md:space-y-32 py-24">
    <section class="impact-section">
      <div
        class="flex flex-col lg:flex-row justify-between items-start gap-12 lg:gap-24 border-b border-border/50 pb-24"
      >
        <div class="flex flex-col gap-8 lg:w-1/3 lg:sticky lg:top-32">
          <div class="anim-impact-header flex items-center gap-4 opacity-0">
            <Badge
              class="font-mono text-xs uppercase tracking-widest"
              size="sm"
            >
              ( 01 )
            </Badge>
            <span
              class="font-mono text-xs text-muted-foreground uppercase tracking-widest"
            >
              Why Donate?
            </span>
          </div>
          <h2
            class="anim-split-heading font-sans text-4xl md:text-5xl font-medium tracking-tighter leading-tight text-balance"
          >
            Where your money goes.
          </h2>
          <div class="anim-impact-desc opacity-0 translate-y-4">
            <p class="font-sans text-lg text-muted-foreground leading-relaxed">
              NSAE is a non-profit organization. 100% of your donations go
              directly towards our mission-driven initiatives.
            </p>
          </div>
        </div>

        <div class="lg:w-2/3 grid gap-6">
          {
            data.impactAreas.map((area) => {
              const IconComponent = iconMap[area.icon] || Heart;

              return (
                <div class="anim-impact-card flex flex-col md:flex-row items-center gap-6 p-8 rounded-2xl bg-secondary/30 border border-border/50 hover:border-primary/50 transition-colors opacity-0 translate-y-12">
                  <div class="p-2 h-fit rounded-lg bg-primary/10 text-primary shrink-0">
                    <IconComponent class="size-6" />
                  </div>

                  <div class="space-y-2">
                    <h3 class="font-sans text-xl font-medium text-foreground">
                      {area.title}
                    </h3>
                    <p class="font-sans text-muted-foreground leading-relaxed">
                      {area.description}
                    </p>
                  </div>
                </div>
              );
            })
          }
        </div>
      </div>
    </section>

    <section class="methods-section">
      <div
        class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6"
      >
        <div class="space-y-4">
          <div
            class="anim-methods-header flex items-center gap-4 mb-4 opacity-0"
          >
            <Badge
              class="font-mono text-xs uppercase tracking-widest"
              size="sm"
            >
              ( 02 )
            </Badge>
            <span
              class="font-mono text-xs text-muted-foreground uppercase tracking-widest"
            >
              Payment Methods
            </span>
          </div>
          <h2
            class="anim-split-heading font-sans text-4xl md:text-5xl font-medium tracking-tighter text-balance"
          >
            Ways to Give
          </h2>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12">
        <div
          class="anim-method-card relative overflow-hidden rounded-3xl border border-border/50 bg-gradient-to-br from-gray-900 to-gray-800 text-white p-8 md:p-10 shadow-xl opacity-0 translate-y-12"
        >
          <div class="absolute top-0 right-0 p-8 opacity-10">
            <BuildingBank class="size-64 -rotate-12" />
          </div>

          <div class="relative z-10 flex flex-col h-full justify-between gap-8">
            <div class="flex justify-between items-start">
              <div class="space-y-1">
                <p
                  class="font-mono text-xs uppercase tracking-widest opacity-60"
                >
                  Direct Bank Transfer
                </p>
                <h3 class="font-sans text-2xl font-medium">
                  {data.bankDetails.bankName}
                </h3>
              </div>
              <BuildingBank class="size-8 opacity-80" />
            </div>

            <div class="space-y-6">
              <div>
                <p
                  class="font-mono text-[10px] uppercase tracking-widest opacity-60 mb-2"
                >
                  Account Number
                </p>
                <div class="flex items-center gap-4">
                  <p
                    class="font-mono text-2xl md:text-3xl tracking-widest font-medium"
                    id="account-number"
                  >
                    {data.bankDetails.accountNumber}
                  </p>
                  <button
                    id="copy-btn"
                    class="p-2 rounded-full bg-white/10 hover:bg-white/20 transition-colors"
                    aria-label="Copy Account Number"
                  >
                    <Copy class="size-4" />
                  </button>
                </div>
              </div>

              <div class="grid grid-cols-2 gap-4">
                <div>
                  <p
                    class="font-mono text-[10px] uppercase tracking-widest opacity-60 mb-1"
                  >
                    Account Name
                  </p>
                  <p class="font-sans text-sm opacity-90">
                    {data.bankDetails.accountName}
                  </p>
                </div>
                <div>
                  <p
                    class="font-mono text-[10px] uppercase tracking-widest opacity-60 mb-1"
                  >
                    Branch
                  </p>
                  <p class="font-sans text-sm opacity-90">
                    {data.bankDetails.branch}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div
          class="anim-method-card rounded-3xl border border-border/50 bg-secondary/30 p-8 md:p-10 flex flex-col items-center justify-center text-center gap-6 opacity-0 translate-y-12"
        >
          <div class="space-y-2">
            <h3 class="font-sans text-2xl font-medium">Scan to Donate</h3>
            <p class="text-muted-foreground max-w-sm mx-auto">
              Use your preferred digital wallet (eSewa, Khalti, Fonepay) to scan
              and donate instantly.
            </p>
          </div>

          <div
            class="bg-white p-4 rounded-xl border border-border shadow-sm max-w-[250px] w-full aspect-square flex items-center justify-center"
          >
            <Image
              src={data.bankDetails.accountQRCode}
              alt="Donation QR Code"
              class="w-full h-full object-contain"
            />
          </div>

          <p
            class="font-mono text-xs text-muted-foreground uppercase tracking-widest"
          >
            Accepted: Fonepay • eSewa • Khalti
          </p>
        </div>
      </div>
    </section>

    <section class="pb-12">
      <div
        class="anim-cta-box bg-primary/5 rounded-3xl p-8 md:p-12 text-center border border-primary/10 flex flex-col items-center gap-6 opacity-0 scale-95"
      >
        <div
          class="size-12 rounded-full text-primary flex items-center justify-center"
        >
          <Heart class="size-6" />
        </div>
        <h2 class="font-sans text-2xl md:text-3xl font-medium tracking-tight">
          Thank you for your support
        </h2>
        <p class="text-muted-foreground max-w-xl">
          Have questions about donations or need a receipt? Please contact our
          treasurer directly.
        </p>
        <Button
          href="/contact"
          variant="outline"
          class="font-mono text-xs uppercase tracking-widest rounded-full"
        >
          Contact Us
        </Button>
      </div>
    </section>
  </div>
</PageLayout>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";

  const copyBtn = document.getElementById("copy-btn");
  const accountNum = document.getElementById("account-number");

  if (copyBtn && accountNum) {
    copyBtn.addEventListener("click", () => {
      const text = accountNum.innerText.replace(/\s/g, "");
      navigator.clipboard.writeText(text).then(() => {
        const originalIcon = copyBtn.innerHTML;
        copyBtn.innerHTML =
          '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l5 5l10 -10" /></svg>';
        setTimeout(() => {
          copyBtn.innerHTML = originalIcon;
        }, 2000);
      });
    });
  }

  if (typeof window !== "undefined") {
    gsap.registerPlugin(ScrollTrigger, SplitText);

    const heroTl = gsap.timeline({
      defaults: { ease: "power3.out" },
    });

    const heroSplit = SplitText.create(".anim-split-text", {
      type: "lines",
      linesClass: "line-inner will-change-transform overflow-hidden",
    });

    heroTl.from(
      ".anim-hero-image",
      {
        scale: 1.2,
        duration: 2.5,
        ease: "expo.out",
      },
      0,
    );

    heroTl.to(
      ".anim-hero-vertical-text",
      {
        opacity: 1,
        y: 0,
        startAt: { y: -20 },
        duration: 1.5,
      },
      0.2,
    );

    heroTl.to(
      ".anim-hero-badge",
      {
        opacity: 1,
        y: 0,
        duration: 1,
      },
      0.3,
    );

    heroTl.from(
      heroSplit.lines,
      {
        yPercent: 100,
        opacity: 0,
        duration: 1.2,
        stagger: 0.1,
        ease: "power4.out",
      },
      0.4,
    );

    heroTl.to(
      ".anim-hero-desc",
      {
        y: 0,
        opacity: 1,
        duration: 1,
      },
      0.8,
    );

    gsap.to(".anim-hero-image", {
      yPercent: 20,
      ease: "none",
      scrollTrigger: {
        trigger: ".donate-hero-section",
        start: "top top",
        end: "bottom top",
        scrub: true,
      },
    });

    const impactSplit = SplitText.create(
      ".impact-section .anim-split-heading",
      {
        type: "lines, words",
        linesClass: "overflow-hidden",
      },
    );

    const impactTl = gsap.timeline({
      scrollTrigger: {
        trigger: ".impact-section",
        start: "top 75%",
      },
    });

    impactTl
      .to(".anim-impact-header", { opacity: 1, duration: 0.5 })
      .from(
        impactSplit.words,
        {
          yPercent: 100,
          duration: 0.8,
          stagger: 0.02,
          ease: "power4.out",
        },
        "-=0.3",
      )
      .to(
        ".anim-impact-desc",
        {
          opacity: 1,
          y: 0,
          duration: 0.5,
        },
        "-=0.4",
      )
      .to(
        ".anim-impact-card",
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          stagger: 0.1,
          ease: "power3.out",
        },
        "-=0.3",
      );

    const methodsSplit = SplitText.create(
      ".methods-section .anim-split-heading",
      {
        type: "lines, chars",
        linesClass: "overflow-hidden",
      },
    );

    const methodsTl = gsap.timeline({
      scrollTrigger: {
        trigger: ".methods-section",
        start: "top 70%",
      },
    });

    methodsTl
      .to(".anim-methods-header", { opacity: 1, duration: 0.5 })
      .from(
        methodsSplit.chars,
        {
          opacity: 0,
          y: 20,
          duration: 0.5,
          stagger: 0.02,
          ease: "back.out",
        },
        "-=0.3",
      )
      .to(
        ".anim-method-card",
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          stagger: 0.15,
          ease: "power3.out",
        },
        "-=0.3",
      );

    gsap.to(".anim-cta-box", {
      opacity: 1,
      scale: 1,
      duration: 1,
      ease: "elastic.out(1, 0.75)",
      scrollTrigger: {
        trigger: ".anim-cta-box",
        start: "top 85%",
      },
    });
  }
</script>
