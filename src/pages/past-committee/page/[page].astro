---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import ClickableCard from "@/components/astro/Card/ClickableCard.astro";
import PageLayout from "@/layouts/PageLayout.astro";
import Badge from "@/components/astro/Badge.astro";
import ArrowRight from "@tabler/icons/outline/arrow-right.svg";
import type { GetStaticPaths, Page } from "astro";
import { PAGE_SIZE } from "@/consts";
import Pagination from "@/components/astro/Pagination.astro";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allCommittees = (
    await getCollection("committees", ({ data }) => {
      return import.meta.env.MODE !== "production" || data.draft === false;
    })
  ).sort(
    (a, b) =>
      b.data.committeeIteration.valueOf() - a.data.committeeIteration.valueOf()
  );

  return paginate(allCommittees, {
    pageSize: PAGE_SIZE,
  });
};

interface Props {
  page: Page<CollectionEntry<"committees">>;
}

const { page } = Astro.props;

const pageTitle = "Past Committees";
const pageDescription =
  "Browse the dedicated members and executive boards that have shaped our journey through the years.";
---

<PageLayout title={pageTitle} description={pageDescription}>
  <main class="space-y-12 py-16 md:py-24">
    <section
      class="flex flex-col items-center justify-center text-center gap-4"
    >
      <div class="anim-header-badge opacity-0 scale-50">
        <Badge
          variant={"secondary"}
          size={"sm"}
          class="font-mono uppercase tracking-widest text-xs mb-3 border border-border/50"
        >
          Archives
        </Badge>
      </div>

      <h1
        class="anim-header-title invisible font-sans text-5xl md:text-7xl font-medium tracking-tighter leading-tight max-w-4xl"
      >
        Leadership History
      </h1>

      <p
        class="anim-header-desc font-sans text-lg text-muted-foreground max-w-2xl text-balance pt-2 opacity-0 translate-y-4"
      >
        Browse the dedicated members and executive boards that have shaped our
        journey through the years.
      </p>
    </section>

    <section>
      {
        page.data.length > 0 ? (
          <>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
              {page.data.map((committee) => (
                <ClickableCard
                  href={`/past-committee/${committee.id}/`}
                  ariaLabel={`View details for ${committee.data.title}`}
                  class="group relative flex flex-col justify-between rounded-xl border border-border/50 bg-secondary text-secondary-foreground p-6 transition-all hover:border-primary/50"
                >
                  <div class="space-y-2">
                    <div class="flex items-start justify-between border-b border-border/50 pb-2 mb-2">
                      <span class="font-mono text-xs text-muted-foreground uppercase tracking-widest">
                        Iteration {committee.data.committeeIteration}
                      </span>
                      <ArrowRight class="size-5 text-muted-foreground transition-transform group-hover:-rotate-45 group-hover:text-primary" />
                    </div>

                    <h3 class="font-sans text-xl font-medium tracking-tight group-hover:text-primary transition-colors">
                      {committee.data.title}
                    </h3>
                  </div>
                </ClickableCard>
              ))}
            </div>
            <div class="anim-pagination flex justify-center mt-16 opacity-0">
              <Pagination
                url={page.url}
                class="font-mono text-sm uppercase tracking-widest"
              />
            </div>
          </>
        ) : (
          <div class="anim-empty-state flex flex-col items-center justify-center py-20 text-center space-y-2 opacity-0 scale-95">
            <p class="text-xl font-medium text-muted-foreground">
              No past committees found.
            </p>
            <p class="text-sm text-muted-foreground/60">
              Check back later for updates.
            </p>
          </div>
        )
      }
    </section>
  </main>
</PageLayout>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";

  if (typeof window !== "undefined") {
    gsap.registerPlugin(ScrollTrigger, SplitText);

    const headerTl = gsap.timeline({
      defaults: { ease: "power3.out" },
    });

    const titleSplit = SplitText.create(".anim-header-title", {
      type: "lines, words",
      linesClass: "overflow-hidden",
    });

    headerTl
      .to(".anim-header-badge", {
        scale: 1,
        opacity: 1,
        duration: 0.8,
        ease: "back.out(1.7)",
      })
      .set(".anim-header-title", { autoAlpha: 1 }, "-=0.4")
      .from(
        titleSplit.words,
        {
          yPercent: 100,
          opacity: 0,
          duration: 1,
          stagger: 0.05,
          ease: "power4.out",
        },
        "<"
      )
      .to(
        ".anim-header-desc",
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
        },
        "-=0.5"
      );

    if (document.querySelector(".anim-pagination")) {
      gsap.to(".anim-pagination", {
        opacity: 1,
        duration: 1,
        scrollTrigger: {
          trigger: ".anim-pagination",
          start: "top 95%",
        },
      });
    }

    if (document.querySelector(".anim-empty-state")) {
      gsap.to(".anim-empty-state", {
        scale: 1,
        opacity: 1,
        duration: 0.8,
        ease: "back.out(1.5)",
        delay: 0.5,
      });
    }
  }
</script>
