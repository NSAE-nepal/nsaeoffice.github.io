---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import Badge from "@/components/astro/Badge.astro";
import Button from "@/components/astro/Button/Button.astro";
import CalendarWeek from "@tabler/icons/outline/calendar-week.svg";
import MapPin from "@tabler/icons/outline/map-pin.svg";
import World from "@tabler/icons/outline/world.svg";
import ArrowUpRight from "@tabler/icons/outline/arrow-up-right.svg";
import { formatDate, formatTime } from "@/utils/datetime";

interface Props {
  data: CollectionEntry<"events">["data"];
}

const { data } = Astro.props;

let dateDisplay = "";
let durationDisplay = "";
let startTimeDisplay = "N/A";
let endTimeDisplay = "N/A";

if (data.eventStart) {
  const startStr = formatDate(data.eventStart);
  const endStr = data.eventEnd ? formatDate(data.eventEnd) : startStr;
  dateDisplay = startStr === endStr ? startStr : `${startStr} â€“ ${endStr}`;

  startTimeDisplay = formatTime(data.eventStart);
  endTimeDisplay = data.eventEnd ? formatTime(data.eventEnd) : "N/A";
}

if (data.eventStart && data.eventEnd) {
  const diffMs = data.eventEnd.getTime() - data.eventStart.getTime();
  if (diffMs > 86400000) {
    const diffDays = Math.round(diffMs / (1000 * 60 * 60 * 24)) + 1;
    durationDisplay = `${diffDays} days`;
  } else {
    const diffHours = diffMs / (1000 * 60 * 60);
    const diffMins = (diffMs / (1000 * 60)) % 60;
    if (diffHours >= 1) {
      const hours = Math.floor(diffHours);
      const mins = Math.round(diffMins);
      durationDisplay = mins > 0 ? `${hours}h ${mins}m` : `${hours}h`;
    } else {
      durationDisplay = `${Math.round(diffMs / (1000 * 60))}m`;
    }
  }
}

let locationDisplay = "Location TBD";
let isOnline = false;

if (data.location) {
  if (data.location.type === "online") {
    locationDisplay = "Online Event";
    isOnline = true;
  } else {
    const parts = [
      data.location.venueName,
      data.location.address,
      data.location.city,
      data.location.state,
    ].filter(Boolean);
    locationDisplay = parts.join(", ") || "In-Person Event";
    if (data.location.type === "hybrid") locationDisplay += " (Hybrid)";
  }
}
---

<header class="grid grid-cols-1 lg:grid-cols-[2fr_1fr] gap-8 lg:gap-12 mb-12">
  <div class="flex flex-col justify-between gap-6">
    <div class="flex flex-col gap-4">
      <div class="flex flex-row items-center gap-4">
        <span
          class="flex h-fit w-fit items-center justify-center rounded-full bg-primary p-3 text-primary-foreground"
        >
          {isOnline ? <World class="h-5 w-5" /> : <MapPin class="h-5 w-5" />}
        </span>
        <div class="flex flex-col">
          <span class="font-sans text-lg font-medium tracking-tight"
            >{dateDisplay}</span
          >
          <span class="font-sans text-md text-muted-foreground"
            >{locationDisplay}</span
          >
        </div>
      </div>

      <div class="flex flex-col gap-2">
        <h1 class="font-sans text-3xl md:text-4xl font-medium tracking-tighter">
          {data.title}
        </h1>
        {
          data.subtitle && (
            <p class="font-sans text-lg text-muted-foreground">
              {data.subtitle}
            </p>
          )
        }
      </div>
    </div>

    <div
      class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between w-full"
    >
      <div
        class="flex w-full md:w-fit flex-row items-center justify-between gap-6 rounded-lg border bg-card p-4 text-card-foreground"
      >
        <div class="text-center">
          <span
            class="font-mono text-xs text-muted-foreground uppercase tracking-wider block mb-0.5"
            >Start</span
          >
          <p class="font-sans font-medium whitespace-nowrap">
            {startTimeDisplay}
          </p>
        </div>

        {
          durationDisplay && (
            <Badge
              size={"lg"}
              class="flex font-mono text-xs uppercase tracking-wider flex-row items-center shrink-0"
            >
              <CalendarWeek class="h-4 w-4 mr-2" />
              {durationDisplay}
            </Badge>
          )
        }

        <div class="text-center">
          <span
            class="font-mono text-xs text-muted-foreground uppercase tracking-wider block mb-0.5"
            >End</span
          >
          <p class="font-sans font-medium whitespace-nowrap">
            {endTimeDisplay}
          </p>
        </div>
      </div>

      {
        data.registrationLink && (
          <div class="flex flex-col gap-3 md:items-end md:text-right">
            <Button
              href={data.registrationLink}
              target="_blank"
              rel="noopener noreferrer"
              class="w-full md:w-auto font-sans font-medium"
            >
              Register Now <ArrowUpRight class="ml-2 size-4" />
            </Button>
            {data.registrationDeadline && (
              <div class="flex items-center justify-center md:justify-end gap-2 font-mono text-xs text-muted-foreground uppercase tracking-wider">
                <CalendarWeek class="h-4 w-4 shrink-0" />
                <span>Deadline: {formatDate(data.registrationDeadline)}</span>
              </div>
            )}
          </div>
        )
      }
    </div>
  </div>

  {
    data.coverImage && (
      <div class="relative w-full aspect-video lg:aspect-[4/3] overflow-hidden rounded-lg shadow-md">
        <Image
          src={data.coverImage}
          alt={data.title}
          class="object-cover w-full h-full"
        />
      </div>
    )
  }
</header>
